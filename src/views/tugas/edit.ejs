<%- include('../partials/header') %>

<div class="row">
  <div class="col-md-8 mx-auto">
    <div class="card">
      <div class="card-header bg-warning">
        <h4 class="mb-0">Edit Tugas</h4>
      </div>
      <div class="card-body">
        <form action="/tugas/edit/<%= tugas.id %>" method="POST">
          <div class="mb-3">
            <label for="mata_kuliah" class="form-label">Mata Kuliah</label>
            <input type="text" class="form-control" id="mata_kuliah" name="mata_kuliah" value="<%= tugas.mata_kuliah %>" required>
          </div>

          <div class="mb-3">
            <label for="deskripsi" class="form-label">Deskripsi Tugas</label>
            <textarea class="form-control" id="deskripsi" name="deskripsi" rows="3" required><%= tugas.deskripsi %></textarea>
          </div>

          <div class="row mb-3">
            <div class="col-md-6">
              <label for="deadline_tanggal" class="form-label">Deadline Tanggal</label>
              <input type="date" class="form-control" id="deadline_tanggal" name="deadline_tanggal" value="<%= tugas.deadline_tanggal %>" required>
            </div>
            <div class="col-md-6">
              <label for="deadline_waktu" class="form-label">Deadline Waktu</label>
              <input type="time" class="form-control" id="deadline_waktu" name="deadline_waktu" value="<%= tugas.deadline_waktu %>" required>
            </div>
          </div>

          <div class="mb-3">
            <label for="tempat_pengumpulan" class="form-label">Tempat Pengumpulan (Opsional)</label>
            <input type="text" class="form-control" id="tempat_pengumpulan" name="tempat_pengumpulan" value="<%= tugas.tempat_pengumpulan || '' %>" placeholder="Contoh: Email Dosen, Classroom, Gedung A Lantai 2, dll.">
          </div>

          <div class="d-flex justify-content-between">
            <a href="/tugas" class="btn btn-secondary">Batal</a>
            <button type="submit" class="btn btn-warning">
              <i class="bi bi-pencil"></i> Update
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer') %> 